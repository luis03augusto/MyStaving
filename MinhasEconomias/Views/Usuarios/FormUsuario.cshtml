
@{
    ViewData["Title"] = "FormUsuario";
}

<div class="row">
    <div class="col s10">
        <form action="AddUsuario" method="post">
            <div class="row">
                <div class="input-field col s8">
                    <input type="text" name="usuario.Nome" id="nome" class="validate" />
                    <label for="nome">Nome</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input type="text" name="usuario.CPF" id="cpf" class="validate" />
                    <label for="cpf">CPF</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input type="email" name="usuario.Email" id="email" class="validate" />
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Inválido" data-success="Válido"></span>
                </div>
            </div>

            <button class="btn waves-effect waves-light" type="submit" name="action">
                Salvar
            </button>
        </form>
    </div>
</div>
